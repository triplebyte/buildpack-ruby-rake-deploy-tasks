#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
    :
  done
fi

for i in {0..100}
do
  task_name=DEPLOY_TASK_$i
  cmd=${!task_name}

  if [ -z "$cmd" ]; then
    if [ $i -eq 0 ]; then
      echo "DEPLOY_TASK_0 has not been set"
      echo "You can set it with:"
      echo 'heroku config:set DEPLOY_TASK_0="rake tasks to run"'
    fi
    exit 0
  fi

  echo "Running: cd $build_dir && bundle exec $cmd"
  cd $build_dir && bundle exec $cmd
done

